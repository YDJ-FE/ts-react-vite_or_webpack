{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "removeComments": false,
        "rootDirs": ["./src"],
        "baseUrl": "./src",
        "paths": {
            "@constants/*": ["constants/*"],
            "@services/*": ["services/*"],
            "@utils/*": ["utils/*"],
            "@assets/*": ["assets/*"],
            "@components/*": ["components/*"],
            "@views/*": ["containers/views/*"],
            "@shared/*": ["containers/shared/*"]
        },
        "jsx": "react",
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "lib": ["es7", "dom"],
        "skipLibCheck": true,
        "typeRoots": ["node", "node_modules/@types", "./typings"]
    }
}
