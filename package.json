{
    "name": "ts-react-webpack",
    "version": "1.0.0",
    "description": "an admin starter-template with typescript, react, mobx and webpack...",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "add": "add-component",
        "manage:translations": "node ./tool/scripts/manageTranslations.js",
        "lint-staged": "lint-staged",
        "lint": "tslint --type-check --project ./tsconfig.json",
        "build:dll": "webpack --config build/webpack.dll.config.js --mode production --colors",
        "dev": "cross-env NODE_ENV=development APP_ENV=dev webpack-dev-server --config build/webpack.config.js --open --hot",
        "build": "cross-env NODE_ENV=production webpack --config build/webpack.config.js",
        "build:qa": "cross-env APP_ENV=qa npm run build",
        "build:prod": "cross-env APP_ENV=prod npm run build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "keywords": [
        "webpack",
        "typescript",
        "admin",
        "react",
        "mobx",
        "starter-template"
    ],
    "author": "jackple",
    "license": "MIT",
    "dependencies": {
        "antd": "^3.16.2",
        "axios": "^0.18.0",
        "bourbon": "^5.1.0",
        "echarts": "^4.2.1",
        "echarts-for-react": "^2.0.14",
        "lodash": "^4.17.11",
        "mobx": "^5.9.4",
        "mobx-react": "^5.4.3",
        "mobx-react-lite": "^1.2.0",
        "mobx-react-router": "^4.0.7",
        "path-to-regexp": "^3.0.0",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-hot-loader": "^4.8.3",
        "react-intl": "^2.8.0",
        "react-loadable": "^5.5.0",
        "react-router-dom": "^5.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.4.3",
        "@babel/plugin-proposal-class-properties": "^7.4.0",
        "@babel/plugin-proposal-decorators": "^7.4.0",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/polyfill": "^7.4.3",
        "@babel/preset-env": "^7.4.3",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@hot-loader/react-dom": "^16.8.6",
        "@svgr/webpack": "^4.1.0",
        "@types/classnames": "^2.2.7",
        "@types/enzyme": "^3.9.1",
        "@types/enzyme-adapter-react-16": "^1.0.5",
        "@types/jest": "^24.0.11",
        "@types/lodash": "^4.14.123",
        "@types/node": "^11.13.4",
        "@types/react": "^16.8.11",
        "@types/react-dom": "^16.8.3",
        "@types/react-loadable": "^5.5.1",
        "@types/react-router-dom": "^4.3.1",
        "@types/webpack-env": "^1.13.9",
        "add-asset-html-webpack-plugin": "^3.1.3",
        "autoprefixer": "^9.5.1",
        "babel-loader": "^8.0.5",
        "babel-plugin-import": "^1.11.0",
        "cache-loader": "^2.0.1",
        "case-sensitive-paths-webpack-plugin": "^2.2.0",
        "classnames": "^2.2.6",
        "cross-env": "^5.1.4",
        "css-loader": "^2.1.1",
        "css-modules-typescript-loader": "^2.0.0",
        "customaddcomponents": "^1.0.35",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.12.1",
        "enzyme-to-json": "^3.3.5",
        "file-loader": "^3.0.1",
        "fs-extra": "^7.0.1",
        "html-webpack-plugin": "^3.0.6",
        "husky": "^1.3.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^24.7.1",
        "less": "^3.9.0",
        "less-loader": "^4.1.0",
        "lint-staged": "^8.1.4",
        "mini-css-extract-plugin": "^0.6.0",
        "moment-locales-webpack-plugin": "^1.0.7",
        "node-sass": "^4.11.0",
        "optimize-css-assets-webpack-plugin": "^5.0.1",
        "postcss-loader": "^3.0.0",
        "raf": "^3.4.1",
        "react-intl-translations-manager": "^5.0.3",
        "rimraf": "^2.6.3",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "stylelint": "^9.9.0",
        "stylelint-config-css-modules": "^1.2.0",
        "stylelint-config-standard": "^18.2.0",
        "stylelint-config-ydj": "^0.1.1",
        "stylelint-order": "^2.2.1",
        "terser-webpack-plugin": "^1.2.3",
        "thread-loader": "^2.1.2",
        "ts-jest": "^24.0.2",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "tslint": "^5.15.0",
        "tslint-react": "^4.0.0",
        "typescript": "^3.4.3",
        "typescript-react-intl": "^0.3.0",
        "url-loader": "^1.1.2",
        "webpack": "4.28.4",
        "webpack-bundle-analyzer": "^3.3.2",
        "webpack-cli": "^3.3.0",
        "webpack-dev-server": "^3.3.1",
        "webpack-hot-middleware": "^2.24.3",
        "workbox-webpack-plugin": "^4.3.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 11"
    ],
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "setupFiles": [
            "raf/polyfill"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "setupFilesAfterEnv": [
            "<rootDir>src/setupTests.ts"
        ],
        "snapshotSerializers": [
            "enzyme-to-json"
        ],
        "moduleNameMapper": {
            "\\.(css|less|scss|svg|jpg|jpeg|png|gif)$": "identity-obj-proxy",
            "^@constants/(.*)$": "<rootDir>/src/constants//$1",
            "^@services/(.*)$": "<rootDir>/src/services//$1",
            "^@utils/(.*)$": "<rootDir>/src/utils//$1",
            "^@assets/(.*)$": "<rootDir>/src/assets//$1",
            "^@components/(.*)$": "<rootDir>/src/components//$1",
            "^@views/(.*)$": "<rootDir>/src/containers/views//$1",
            "^@shared/(.*)$": "<rootDir>/src/containers/shared//$1"
        }
    }
}
