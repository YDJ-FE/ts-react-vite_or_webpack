{
    "name": "ts-react-vite_or_webpack",
    "version": "1.0.0",
    "description": "an admin starter-template with typescript, react, mobx and vite/webpack...",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "prepare": "husky install",
        "lint-staged": "lint-staged",
        "lint": "eslint src --ext .ts,.tsx && stylelint \"./src/**/*.scss\"",
        "dev": "vite --port 8080",
        "build:qa": "vite build --mode qa",
        "preview:qa": "yarn build:qa && vite preview --port 8081",
        "build:prod": "vite build",
        "preview:prod": "vite build && vite preview --port 8081"
    },
    "keywords": [
        "vite/webpack",
        "typescript",
        "admin",
        "react",
        "mobx",
        "starter-template"
    ],
    "author": "jackple",
    "license": "MIT",
    "dependencies": {
        "@loadable/component": "5.15.2",
        "antd": "4.18.4",
        "axios": "0.25.0",
        "bourbon": "7.0.0",
        "eventemitter3": "4.0.7",
        "lodash": "4.17.21",
        "mobx": "6.3.12",
        "mobx-react": "7.2.1",
        "path-to-regexp": "6.2.0",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-intl-universal": "2.4.8",
        "react-json-view": "1.21.3",
        "react-router-dom": "6.2.1",
        "react-virtualized": "9.22.3",
        "socket.io-client": "4.4.1",
        "socketio-wildcard": "2.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "16.0.2",
        "@commitlint/config-conventional": "16.0.0",
        "@types/classnames": "2.3.1",
        "@types/enzyme": "3.10.11",
        "@types/enzyme-adapter-react-16": "^1.0.5",
        "@types/jest": "27.4.0",
        "@types/loadable__component": "5.13.4",
        "@types/lodash": "4.14.178",
        "@types/node": "17.0.10",
        "@types/qs": "6.9.7",
        "@types/react": "17.0.38",
        "@types/react-dom": "17.0.11",
        "@types/react-router-dom": "5.3.3",
        "@types/react-virtualized": "9.21.16",
        "@types/socket.io-client": "3.0.0",
        "@typescript-eslint/eslint-plugin": "5.10.0",
        "@typescript-eslint/parser": "5.10.0",
        "@vitejs/plugin-legacy": "^1.6.4",
        "@vitejs/plugin-react": "^1.1.4",
        "autoprefixer": "10.4.2",
        "classnames": "2.3.1",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "1.15.6",
        "enzyme-to-json": "3.6.2",
        "eslint": "8.7.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-react": "7.28.0",
        "husky": "7.0.4",
        "identity-obj-proxy": "^3.0.0",
        "jest": "27.4.7",
        "less": "4.1.2",
        "lint-staged": "12.2.0",
        "postcss": "8.4.5",
        "prettier": "2.5.1",
        "prettier-stylelint": "^0.4.2",
        "sass": "1.49.0",
        "stylelint": "14.2.0",
        "stylelint-config-prettier": "9.0.3",
        "stylelint-order": "5.0.0",
        "stylelint-prettier": "2.0.0",
        "ts-jest": "27.1.3",
        "typescript": "4.5.4",
        "vite": "^2.7.13",
        "vite-plugin-pwa": "^0.11.13"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 11"
    ],
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "setupFiles": [
            "raf/polyfill"
        ],
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
        "setupFilesAfterEnv": [
            "<rootDir>src/setupTests.ts"
        ],
        "snapshotSerializers": [
            "enzyme-to-json"
        ],
        "moduleNameMapper": {
            "\\.(css|less|scss|svg|jpg|jpeg|png|gif)$": "identity-obj-proxy",
            "^@constants/(.*)$": "<rootDir>/src/constants//$1",
            "^@services/(.*)$": "<rootDir>/src/services//$1",
            "^@utils/(.*)$": "<rootDir>/src/utils//$1",
            "^@assets/(.*)$": "<rootDir>/src/assets//$1",
            "^@components/(.*)$": "<rootDir>/src/components//$1",
            "^@views/(.*)$": "<rootDir>/src/containers/views//$1",
            "^@shared/(.*)$": "<rootDir>/src/containers/shared//$1"
        }
    }
}
